<odoo>
    <record id="action_library_checkout" model="ir.actions.act_window">
        <field name="name">Checkouts</field>
        <field name="res_model">library.checkout</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
        
    </record>

    <record id="action_library_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">library.checkout.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_library_checkout" name="Checkouts" parent="library_app.menu_library" action="action_library_checkout"/> 
    <menuitem id="menu_library_stage" name="Stages" parent="library_app.menu_library_configuration" action="action_library_stage"/>
</odoo>